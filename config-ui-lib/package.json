{
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "cd .. && husky install config-ui-lib/.husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prettier": "prettier . --write",
    "start": "yarn workspace @devlake-ui/website dev",
    "build": "yarn workspace @devlake-ui/connection build",
    "publish": "yarn workspace @devlake-ui/connection npm publish --access public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-config-mints": "^2.0.2",
    "eslint-plugin-header": "^3.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1"
  }
}
